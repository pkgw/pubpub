	"main": "init.js",
	"scripts": {
		"api-dev": "NODE_PATH=./client:./ node init.js --watch ./server --watch ./shared --watch ./client",
		"api-prod": "NODE_PATH=./client:./ node init.js",
		"build-dev": "webpack --config ./client/webpack/webpackConfig.dev.js --watch",
		"build-dev-once": "rm -rf ./dist && webpack --config ./client/webpack/webpackConfig.dev.js",
		"build-prod": "rm -rf ./dist && webpack --config ./client/webpack/webpackConfig.prod.js",
		"prod": "npm run build-prod && npm run api-prod",
		"lint": "eslint .",
		"pretty": "prettier --write '**/*.js'",
		"migrate": "node initMigrations.js",
		"install-git-hooks": "rm -f ./.git/hooks/* && cp ./.githooks/* ./.git/hooks && chmod +x ./.git/hooks/*",
		"postinstall": "npm run build-prod",
		"search-sync": "NODE_PATH=./client:./ node searchSync/init.js",
		"start": "npm run build-dev-once && concurrently --kill-others \"npm run api-dev\" \"npm run build-dev\"",
		"storybook": "start-storybook -p 9001 -c .storybook -s ./",
		"test": "jest --forceExit --silent --detectOpenHandles",
		"workers-dev": "SEQUELIZE_MAX_CONNECTIONS=1 NODE_PATH=./client:./ WORKER=true nodemon workers/init.js --watch workers",
		"workers-prod": "SEQUELIZE_MAX_CONNECTIONS=1 NODE_PATH=./client:./ WORKER=true node workers/init.js"
	},
